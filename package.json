{
  "name": "learn-socialgamer-api",
  "version": "0.0.0",
  "description": "Learn Social Gamer API",
  "private": true,
  "scripts": {
    "start": "npx pm2 start ./src/server.js --name socialgamer-api --watch",
    "stop": "npx pm2 stop socialgamer-api",
    "dev": "npm start && npx pm2 logs",
    "docs": "npx apidoc -i src/routes/ -o docs/",
    "test": "NODE_ENV=test npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sasknot/learn-socialgamer-api.git"
  },
  "author": "Rafael Silva <rafaelfsilva1@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/sasknot/learn-socialgamer-api#readme",
  "dependencies": {
    "@graphql-toolkit/file-loading": "^0.10.6",
    "apidoc": "^0.20.1",
    "apollo-server-express": "^2.13.0",
    "bookshelf": "^1.1.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "knex": "^0.20.13",
    "pm2": "^4.4.0",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "jest": "^26.0.1"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "<rootDir>/tests/**/*_test.js"
    ]
  }
}